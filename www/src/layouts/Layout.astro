---
interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="The immutable, feature-rich module registry for GitHub repositories." />

    <title>{title}</title>

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="https://use.typekit.net/tig0tan.css">
  </head>

  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --bg: #E8E8E8;
    --bgDarker: #D9D9D9;
    --title: #202020;
    --text: #646464;
    --textLight: #838383;
    --textLighter: #8D8D8D;
  }

  html {
    font-family: seitu-variable, sans-serif;
    background: var(--bg);
  }

  html, body {
    height: 100%;
    width: 100%;
    padding: 0;
    margin: 0;
  }

  body {
    height: auto;
    display: flex;
		align-items: center;
		justify-content: center;
		flex-direction: column;
  }

  @media only screen and (min-width: 600px) {
		body {
			height: 100%;
		}
	}
</style>
